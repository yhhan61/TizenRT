ifeq ($(CONFIG_DM), y)
ifeq ($(CONFIG_LWM2M_CLIENT_MODE),y)
CSRCS += dm_lwm2m.c
endif
CSRCS += dm_common_interface.c
ifeq ($(CONFIG_NETUTILS_WIFI),y)
ifeq ($(CONFIG_BRCM_WLAN), y)
CSRCS += bcm2835_dm_connectivity.c

CFLAGS += -I$(TOPDIR)/drivers/wireless/broadcom/WWD/include
CFLAGS += -I$(TOPDIR)/drivers/wireless/broadcom/WWD/internal/chips/4343x
CFLAGS += -I$(TOPDIR)/drivers/wireless/broadcom/WWD/include
CFLAGS += -I$(TOPDIR)/drivers/wireless/broadcom/WWD/include/RTOS
CFLAGS += -I$(TOPDIR)/drivers/wireless/broadcom/rpi0w
else
CSRCS += s5j_dm_connectivity.c
endif
else
CSRCS += dm_connectivity.c
endif

ifeq ($(CONFIG_LWM2M_WAKAAMA),y)
CFLAGS+=-I$(TOPDIR)/../external/wakaama/core
CFLAGS+=-I$(TOPDIR)/../external/wakaama/examples/shared
endif
ifeq ($(CONFIG_LWM2M_CLIENT_MODE),y)
CFLAGS+=-I$(TOPDIR)/../external/wakaama/examples/client
endif

DEPPATH += --dep-path src/dm
VPATH += :src/dm

ifeq ($(CONFIG_ARCH_CHIP_S5JT200),y)
DEPPATH += --dep-path src/dm/arch/sidk_s5jt200
VPATH += src/dm/arch/sidk_s5jt200
endif

ifeq ($(CONFIG_ARCH_CHIP_BCM2835),y)
DEPPATH += --dep-path src/dm/arch/bcm2835
VPATH += src/dm/arch/bcm2835
endif
endif
